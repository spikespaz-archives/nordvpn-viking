<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <object class="GtkApplicationWindow" id="window">
        <property name="title">NordVPN</property>
        <property name="default-width">800</property>
        <property name="default-height">600</property>
        <property name="width-request">600</property>
        <property name="height-request">400</property>
        <child type="titlebar">
            <object class="GtkHeaderBar">
                <child type="start">
                    <object class="GtkBox">
                        <child>
                            <object class="GtkButton">
                                <property name="icon-name">dialog-information-symbolic</property>
                            </object>
                        </child>
                    </object>
                </child>
                <child type="title">
                    <object class="GtkBox">
                        <style>
                            <class name="linked" />
                        </style>
                        <child>
                            <object class="GtkToggleButton" id="headerbar_connect_button">
                                <property name="label">Connect</property>
                                <property name="active">True</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkToggleButton" id="headerbar_account_button">
                                <property name="label">Account</property>
                                <property name="group">headerbar_connect_button</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkToggleButton" id="headerbar_settings_button">
                                <property name="label">Settings</property>
                                <property name="group">headerbar_connect_button</property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
        <child>
            <object class="GtkButton" id="button">
                <property name="label">Press me!</property>
            </object>
        </child>
    </object>
</interface>